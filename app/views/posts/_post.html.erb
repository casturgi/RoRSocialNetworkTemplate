<div class="panel panel-default">
<div class="panel-heading">
	<%= image_tag gravatar_url(@user.email, 40), alt: "" %><%= post.user.username %> posted this <%= time_ago_in_words(post.created_at) %> ago 
	<% if current_user == post.user %>
	  <%= link_to "edit", edit_post_path(post) %> | <%= link_to "x", post, method: :delete %>
	<% end %>
</div>
<div class="panel-body">
   <%= post.content %>
</div>
</div>